<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>SemanticValidation</Title>
    <Authors>Mehran Davoudi</Authors>
    <Description>A library to validate strings semantically using OpenAI</Description>
    <PackageProjectUrl>https://github.com/mehrandvd/SemanticValidation</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mehrandvd/SemanticValidation</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>Semantic;Validation;OpenAI</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Plugins\TestPlugin\AreSame\config.json" />
    <None Remove="Plugins\TestPlugin\AreSame\skprompt.txt" />
    <None Remove="Plugins\TestPlugin\HasCondition\config.json" />
    <None Remove="Plugins\TestPlugin\HasCondition\skprompt.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Plugins\TestPlugin\AreSame\config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Plugins\TestPlugin\AreSame\skprompt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Plugins\TestPlugin\HasCondition\config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Plugins\TestPlugin\HasCondition\skprompt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SemanticKernel" Version="1.0.1" />
  </ItemGroup>

</Project>
